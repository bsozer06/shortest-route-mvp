{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend (index.js)",
            "program": "${workspaceFolder}/backend/index.js",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
